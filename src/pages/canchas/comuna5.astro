---
import CollectionLayout from "@components/canchas/CollectionLayout.astro";
import { getIndex, getEntries } from "@lib/contentParser";
import { sortByDate } from "@lib/sortFunctions";
import type { CanchasEntry } from "@/types";

const entryIndex = (await getIndex("canchas")) as CanchasEntry;
const entries = (await getEntries("canchas", sortByDate)) as CanchasEntry[];

// Only show maracana.md and rene-higuita.md for comuna5
const currentEntries = entries.filter(
  e => e.id === "comuna5/maracana" || e.id === "comuna5/rene-higuita"
);

const currentPageIndex = 1;
const pageCount = 1;
---

<CollectionLayout
  entryIndex={entryIndex}
  entries={currentEntries}
  pageIndex={currentPageIndex}
  pageCount={pageCount}
/>
