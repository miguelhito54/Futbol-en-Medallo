---
import BaseLayout from "@components/base/BaseLayout.astro";
import type { CanchasEntry } from "@/types";
import { getEntry, render } from "astro:content";
import EntryHeader from "@components/common/EntryHeader.astro";

const entry = (await getEntry("canchas", "comuna4/aranjuez")) as CanchasEntry;
const { Content, headings } = await render(entry);
const { title } = entry.data;

const canchaInfo = {
  nombre:" Aranjuez | Las Esmeraldas  |",
  direccion:
    "Calle 81A #50-40, Barrio Campo Valdés, Comuna 4 - Aranjuez, Medellín, Antioquia",
  reservas: "3699000",
  historia:
    "La cancha Las Esmeraldas, ubicada en la Comuna 4, fue inaugurada en 2016 como un nuevo escenario deportivo para la comunidad. Su inauguración se celebró con una jornada de pedagogía para la fiesta del clásico en paz, promoviendo la convivencia y el respeto en el deporte.",
  equipos: [
    "Escuelas de formación deportiva locales y equipos juveniles que participan en torneos comunitarios.",
  ],
};

const gallery = [
  {
    src: "/src/assets/canchas/comuna4/aranjuez/photo6.jpg",
    alt: "Las Esmeraldas Photo 1",
    size: "w-full h-64 md:h-80",
  },
  {
    src: "/src/assets/canchas/comuna4/aranjuez/photo2.jpg",
    alt: "Las Esmeraldas Photo 2",
    size: "w-1/2 h-48 md:h-64",
  },
  {
    src: "/src/assets/canchas/comuna4/aranjuez/photo3.jpg",
    alt: "Las Esmeraldas Photo 3",
    size: "w-1/2 h-48 md:h-64",
  },
  {
    src: "/src/assets/canchas/comuna4/aranjuez/photo4.jpg",
    alt: "Las Esmeraldas Photo 4",
    size: "w-full h-56 md:h-72",
  },
  {
    src: "/src/assets/canchas/comuna4/aranjuez/photo5.jpg",
    alt: "Las Esmeraldas Photo 5",
    size: "w-1/2 h-40 md:h-56",
  },
  {
    src: "/src/assets/canchas/comuna4/aranjuez/photo1.jpg",
    alt: "Las Esmeraldas Photo 6",
    size: "w-1/2 h-40 md:h-56",
  },
  {
    src: "/src/assets/canchas/comuna4/aranjuez/photo7.jpg",
    alt: "Las Esmeraldas Photo 7",
    size: "w-full h-40 md:h-56",
  },
];
---

<BaseLayout
  title={title}
  image={gallery[3].src}
  description={canchaInfo.nombre}
>
  <section class="container p-4 max-w-2xl mx-auto">
    <article class="w-full flex flex-col gap-4">
      <EntryHeader entry={entry} showImage={false} />
      <div class="flex flex-col gap-4 justify-center mb-2">
        <!-- Main image and info -->
        <div
          class="glass px-2 py-2 rounded-lg flex flex-col items-center justify-center relative"
        >
          <a
            href={gallery[0].src}
            target="_blank"
            rel="noopener noreferrer"
            class="contents"
          >
            <img
              src={gallery[0].src}
              alt={gallery[0].alt}
              class="rounded object-cover w-full h-64 md:h-80 transition-none"
              style="max-width:100%; box-shadow:none;"
              loading="lazy"
            />
            <div
              class="absolute inset-0 flex items-center justify-center bg-black/30"
            >
              <h1
                class="text-2xl md:text-3xl font-bold text-white drop-shadow-lg text-center"
              >
                {canchaInfo.nombre}
              </h1>
            </div>
          </a>
          <div class="mt-2 text-sm text-center">
            <p>
              <strong>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="inline-block mr-1"
                  width="18"
                  height="18"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-width="2"
                    d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5A2.5 2.5 0 1 1 12 6a2.5 2.5 0 0 1 0 5.5z"
                  ></path></svg
                >
                 Dirección:
              </strong>
              <span style="color:#6b7280;"> {canchaInfo.direccion}</span>
            </p>
            <p>
              <strong>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="inline-block mr-1"
                  width="18"
                  height="18"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-width="2"
                    d="M6.62 10.79a15.053 15.053 0 0 0 6.59 6.59l2.2-2.2a1 1 0 0 1 1.11-.21c1.21.49 2.53.76 3.88.76a1 1 0 0 1 1 1V20a1 1 0 0 1-1 1C10.07 21 3 13.93 3 5a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1c0 1.35.26 2.67.76 3.88a1 1 0 0 1-.21 1.11l-2.2 2.2z"
                  ></path></svg
                >
                 Reservas:
              </strong>
              <a
                href={`tel:${canchaInfo.reservas}`}
                class="text-blue-600 font-bold underline ml-1"
              >
                {canchaInfo.reservas}
              </a>
            </p>
          </div>
        </div>
        <!-- 2-up gallery row -->
        <div
          class="glass px-2 py-2 rounded-lg flex gap-4 items-center justify-center"
        >
          <a
            href={gallery[1].src}
            target="_blank"
            rel="noopener noreferrer"
            class="contents"
          >
            <img
              src={gallery[1].src}
              alt={gallery[1].alt}
              class="rounded object-cover w-full h-48 md:h-64 transition-none"
              style="max-width:100%; box-shadow:none;"
              loading="lazy"
            />
          </a>
          <a
            href={gallery[2].src}
            target="_blank"
            rel="noopener noreferrer"
            class="contents"
          >
            <img
              src={gallery[2].src}
              alt={gallery[2].alt}
              class="rounded object-cover w-full h-48 md:h-64 transition-none"
              style="max-width:100%; box-shadow:none;"
              loading="lazy"
            />
          </a>
        </div>
        <!-- Historia -->
        <section class="glass px-4 py-2 rounded-lg text-base mb-2">
          <h2 class="text-xl font-bold mb-4 text-gray-800 text-center">
            Historia
          </h2>
          <p>
            {canchaInfo.historia}
          </p>
        </section>
        <!-- Large image -->
        <div
          class="glass px-2 py-2 rounded-lg flex gap-4 items-center justify-center"
        >
          <div class="w-1/2 flex items-center justify-center">
            <p class="text-center">
              "El deporte es el lenguaje universal que une a las comunidades."
            </p>
          </div>
          <a
            href={gallery[3].src}
            target="_blank"
            rel="noopener noreferrer"
            class="contents w-1/2"
          >
            <img
              src={gallery[3].src}
              alt={gallery[3].alt}
              class="rounded object-cover object-top w-full h-56 md:h-72 transition-none"
              style="object-fit:cover; object-position:top; max-width:100%; box-shadow:none;"
              loading="lazy"
            />
          </a>
        </div>
        <!-- 2-up gallery row (photos 5 and 6) -->
        <div
          class="glass px-2 py-2 rounded-lg flex gap-4 items-center justify-center"
        >
          <a
            href={gallery[4].src}
            target="_blank"
            rel="noopener noreferrer"
            class="contents"
          >
            <img
              src={gallery[4].src}
              alt={gallery[4].alt}
              class="rounded object-cover object-top w-full h-40 md:h-56 transition-none"
              style="object-fit:cover; object-position:top; max-width:100%; box-shadow:none;"
              loading="lazy"
            />
          </a>
          <a
            href={gallery[5].src}
            target="_blank"
            rel="noopener noreferrer"
            class="contents"
          >
            <img
              src={gallery[5].src}
              alt={gallery[5].alt}
              class="rounded object-cover w-full h-40 md:h-56 transition-none"
              style="max-width:100%; box-shadow:none;"
              loading="lazy"
            />
          </a>
        </div>
        <!-- Final wide image -->
        <div
          class="glass px-2 py-2 rounded-lg flex items-center justify-center"
        >
          <a
            href={gallery[6].src}
            target="_blank"
            rel="noopener noreferrer"
            class="contents"
          >
            <img
              src={gallery[6].src}
              alt={gallery[6].alt}
              class="rounded object-cover transition-none"
              style="object-fit:cover; max-width:100%; box-shadow:none;"
              loading="lazy"
            />
          </a>
        </div>
        <!-- Equipos destacados -->
        <section class="glass px-4 py-2 rounded-lg text-base mb-2 w-full">
          <h2 class="text-xl font-bold mb-4 text-gray-800 text-center">
            Equipos destacados
          </h2>
          <ul class="list-disc list-inside mb-2 w-full">
            {
              canchaInfo.equipos.map((equipo) => (
                <li class="w-full">
                  <span>{equipo}</span>
                </li>
              ))
            }
          </ul>
        </section>
      </div>
    </article>
  </section>
</BaseLayout>
